<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:id="@+id/cardView"
        app:cardElevation="0dp"
        >
        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/image_iv"
                android:layout_width="@dimen/dp_110"
                android:layout_height="@dimen/dp_100"
                android:layout_gravity="center"
                android:src="@drawable/demo"
                style="@style/ImageViewBackground"
                />
            <ImageView
                android:id="@+id/video_iv"
                android:layout_width="192dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:background="@color/colorBlack"
                android:scaleType="fitCenter"
                android:src="@drawable/demo"
                style="@style/ImageViewBackground"
                />
            <ImageView
                android:id="@+id/viewImageVideo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/play_button"
                />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_centerInParent="true"
                android:visibility="visible"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration_tv"
            android:layout_marginLeft="@dimen/dp_3"
            android:visibility="visible"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="8sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/viewSeen"
        android:layout_width="wrap_content"
        android:background="@color/colorBlackTransparent"
        android:layout_alignLeft="@id/cardView"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:layout_alignRight="@id/cardView"
        android:layout_alignBottom="@id/cardView"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_centerVertical="true"
            android:id="@+id/seen_rl"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_alignParentLeft="true"
                android:id="@+id/seen_iv"
                android:src="@drawable/ic_seen_messenge_24dp"/>
            <TextView
                android:id="@+id/seen_mess"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/seen_iv"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:visibility="visible"
                android:text="Đã xem"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/message_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="16 May"
            android:textColor="@android:color/white"
            android:textSize="7sp" />

    </RelativeLayout>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
     android:layout_alignLeft="@id/cardView"
      android:layout_alignBottom="@id/cardView"
      android:visibility="gone"
      android:id="@+id/count_rl"
      android:layout_alignTop="@id/cardView"
      android:layout_centerInParent="true"
      android:background="@color/colorBlackTransparent"
      android:layout_alignRight="@id/cardView">
      <TextView
          android:id="@+id/tvCount"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:gravity="center"
          android:textStyle="bold"
          android:text="+6"
          android:alpha="0.5"
          android:textColor="@color/colorGray"
          android:textSize="@dimen/sp_30" />
  </RelativeLayout>

</RelativeLayout>